  <script>
    // ردود محلية بسيطة حسب الكلمات المفتاحية — للعرض فقط.
    const rules = [
      {k:/أمن|سيبر|security/i, a:"للأمن السيبراني: ابدأ بمراجعة الأصول، تطبيق مبدأ الأقل صلاحية، وتفعيل مراقبة السجلات مع تنبيهات شذوذ."},
      {k:/برمج|كود|code|program/i, a:"للبرمجة: حدّد المتطلبات، اكتب اختبارات، صمّم واجهات واضحة، نفّذ، ثم CI/CD مع مراجعات شيفرة."},
      {k:/بيانات|تحليل|data|ML|AI/i, a:"للبيانات والذكاء: نظّف البيانات، استكشفها، اختر نموذجاً بسيطاً أولاً، راقب الانحياز، وقيّم قبل الإنتاج."},
      {k:/واقع|VR|AR|افتراضي/i, a:"للواقع الافتراضي/المعزز: حدد سيناريوهات القيمة، معدّل إطار ثابت، واجهات مريحة، وقياس دقيق لتتبّع الحركة."},
      {k:/فضاء|قمر|Space/i, a:"للمجال الفضائي: راقب الطاقة والحرارة والكتلة، واستخدم بروتوكولات اتصال مقاومة للأخطاء والزمن الطويل."},
      {k:/قانون|محام|قضائي|legal/i, a:"للقانون التقني: صنّف المستند، استخرج الكيانات، قارن السوابق، ولد مسودة مع تحذير بعدم اعتبارها استشارة قانونية."},
      {k:/ألعاب|game/i, a:"للألعاب: ابدأ بنموذج لعب صغير قابِل للتكرار، اضبط التوازن، وراقب مقاييس الاحتفاظ باللاعب."},
      {k:/ويب|موقع|frontend|backend/i, a:"لويب حديث: اجعل الواجهة خفيفة، API واضحة، مصادقة آمنة، وتخزين مؤقت مع مراقبة أداء."}
    ];

    const box = document.getElementById('chatBox');
    const q   = document.getElementById('q');
    const btn = document.getElementById('send');

    function addMsg(role, text){
      const row = document.createElement('div');
      row.className = 'msg ' + (role==='user' ? 'user' : 'ai');
      const bubble = document.createElement('div');
      bubble.className = 'bubble';
      bubble.textContent = text;
      row.appendChild(bubble);
      box.appendChild(row);
      box.scrollTop = box.scrollHeight;
    }

    function reply(text){
      const rule = rules.find(r => r.k.test(text));
      if(rule){ return rule.a + " — مكاميلا."; }
      // رد عام
      return "تم! مكاميلا هنا يساعدك. صف لي هدفك (مجال، منصة، قيود زمن/تكلفة) وسأقترح خطة تنفيذ خطوة بخطوة.";
    }

    btn.addEventListener('click', () => {
      const text = q.value.trim();
      if(!text) return;
      addMsg('user', text);
      q.value='';
      setTimeout(()=> addMsg('ai', reply(text)), 300);
    });

    q.addEventListener('keydown', e => {
      if(e.key === 'Enter'){ btn.click(); }
    });

    // رسالة ترحيب
    addMsg('ai', 'مرحباً! أنا مكاميلا من Kazarerla بعقل المفكّرة العظيمة. اسألني عن أي مجال تقني حديث، وسأرسم لك الطريق.');
  </script>
