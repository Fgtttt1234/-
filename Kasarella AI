<body>
  <h1>مرحباً بك 👋</h1>
  <p>أنا مساعد ذكي من شركة Kazarela 🤖 تحت إدارة الملياردير السعودي أحمد دغريري</p>

  <div id="chat">
    <div id="messages"></div>
    <input type="text" id="userInput" placeholder="اكتب سؤالك هنا...">
    <button onclick="sendMessage()">إرسال</button>
  </div>

  <script>
    function sendMessage() {
      const input = document.getElementById('userInput');
      const messages = document.getElementById('messages');
      const userText = input.value;
      
      if (userText.trim() === '') return;

      messages.innerHTML += `<p><b>أنت:</b> ${userText}</p>`;

      // ردود بسيطة مبدئية
      let reply = "أنا من شركة Kazarela 🤖، كيف أساعدك اليوم؟";
      if (userText.includes("من أسس الشركة")) {
        reply = "مؤسس الشركة هو أحمد دغريري، رائد الذكاء الاصطناعي.";
      } else if (userText.includes("مرحبا")) {
        reply = "أهلاً بك! أنا مساعد Kazarela 🤖.";
      }

      messages.innerHTML += `<p><b>Kazarela 🤖:</b> ${reply}</p>`;
      input.value = "";
    }
  </script>
</body>
</html>
<script>
async function sendMessage() {
  const input = document.getElementById("userInput");
  const chat = document.getElementById("chatBox");
  const userText = input.value;

  if (!userText) return;

  // عرض رسالة المستخدم
  chat.innerHTML += `<div class="msg"><b>أنت:</b> ${userText}</div>`;
  input.value = "";

  try {
    const response = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "Authorization": "Bearer ضع_مفتاحك_هنا"
      },
      body: JSON.stringify({
        model: "gpt-3.5-turbo",
        messages: [{ role: "user", content: userText }]
      })
    });

    const data = await response.json();
    const aiReply = data.choices[0].message.content;

    // عرض رد كازاريلا AI
    chat.innerHTML += `<div class="msg">🤖 كازاريلا AI: ${aiReply}</div>`;
    chat.scrollTop = chat.scrollHeight;

  } catch (error) {
    chat.innerHTML += `<div class="msg">⚠️ خطأ: لم أتمكن من الاتصال بـ OpenAI</div>`;
  }
}
</script>
https://api.openai.com/v1/chat/completions
